<div id="container">
    <h1>Permisos!</h1>

    <div id="body">
        <p>Modifica las picadas del empleado.</p>
        {{titulo}}
        <form action="permiso/save_picada/{{data.id}}" method="post" id="empleado_form">
            <!--{form_open("empleados/save")}-->
            <div class="form-group">
                <input name="fecha" class='form-control' value="{{fecha}}" readonly="true"/>
            </div>
            <div class="form-group">
                <label>Nombres: </label>
                <input name="nombre" class='form-control' value="{{data.nombre}}"/>
            </div>
            <div class="form-group">
                <label>Picadas Horario: </label>
                {#form_dropdown('id_horario',horarios,data.id_horario,'class="chosen-select form-control" data-placeholder="Escoje un horario"')#}
                
                {% for data in picadas %}
                    {% include '_layouts/permiso_dia.html.twig' %}
                {% else %}
                    {% include '_layouts/permiso_dia.html.twig' %}
                {% endfor %}
            </div>
            <button type="submit" class="btn btn-success">Guardar</button>
            <!--End Form Permissions-->
        </form>
    </div>
</div>
