{% extends _layout %}
    
{% block content %}

        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h2>{{line('common_about')}} Inicio de Sesi√≥n</h2>
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <p> {{line('login_login')}}</p>
                            <p> {{line('login_welcome_message')}}</p>
                        </div>
                        <div class="panel-body">

                            {{ form_open('/login', {'id': 'login_form', 'role' : 'form'}) }}
                            <fieldset>
                                <div class="form-group">
                                    {{validation_errors('<label class="error">', '</label>') }}
                                   {{form_input({
                                        'name' : 'username',
                                        'value' : username,
                                        'size' : '20',
                                        'class' : 'form-control',
                                        "placeholder" : "Usuario",
                                    })}}
                                </div>
                                <div class="form-group">
                                    {{form_password({
                                        'name' : 'password',
                                        'value' : password,
                                        'size' : '20',
                                        'class' : 'form-control',
                                        "placeholder" : "Clave"})}}

                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Recordarme</input>
                                    </label>
                                </div>
                                {{ form_submit('loginButton', 'Entrar', "class='btn btn-lg btn-success btn-block'") }}
                            </fieldset>
                            {{ form_close()}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
     {%block javascript%}
         {{parent()}}
        <script type="text/javascript">
            $(document).ready(function ()
            {
                $("#login_form input:first").focus();

                $("#login_form").validate({
                    submitHandler: function (form) {
                        form.submit();
                    },
                    rules: {
                        username: "required",
                        password: {
                            required: true
                        }
                    },
                    messages: {
                        username: "Ingrese su usuario",
                        password: {
                            required: "Ingrese la clave de acceso"
                        }
                    }
                });
            });
        </script>
        {%endblock%}
